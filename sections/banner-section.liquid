{% stylesheet %}
.banner-container {
display: flex;
flex-direction: column;
background-color: #fff;
font-family: 'Inter', sans-serif;
color: #000;
}

/* 1. Top Bar Area */
.top-bar {
display: flex;
justify-content: space-between;
align-items: center;
width: 100%;
padding: 10px 60px;
background-color: #F8F8F8;
border-bottom: 1px solid #EAEAEA;
z-index: 10;
position: relative;
}
.logo-text {
font-size: 24px;
font-weight: 700;
letter-spacing: 0.1em;
}
.header-tagline {
position: absolute;
left: 50%;
transform: translateX(-50%);
font-size: 16px;
white-space: nowrap;
}
.shop-button {
background-color: #ffe500;
color: #000;
font-weight: 700;
padding: 14px 32px;
border-radius: 4px;
text-decoration: none;
font-size: 16px;
display: inline-flex;
align-items: center;
gap: 8px;
transition: transform 0.3s ease;
white-space: nowrap;
}

/* 2. Image Area */
.banner-image-area {
width: 100%;
height: 50vh;
min-height: 400px;
overflow: hidden;
margin-top: 0; /* ensures it starts below top bar cleanly */
}
.banner-bg-img {
width: 100%;
height: 100%;
object-fit: cover;
display: block;
}

/* 3. Text Content Area */
.banner-text-area {
width: 100%;
padding: 5% 12%;
background-color: #fff;
}
.banner-content {
max-width: 550px;
display: flex;
flex-direction: column;
align-items: flex-start;
text-align: left;
gap: 25px;
}
.main-title {
font-weight: 700;
font-size: 56px;
line-height: 1.1;
margin: 0;
white-space: nowrap;
}
.description {
font-size: 18px;
line-height: 1.6;
max-width: 500px;
margin: 0;
}
.shop-now-btn {
background-color: #000;
color: #fff;
padding: 16px 40px;
border-radius: 4px;
font-weight: 700;
font-size: 16px;
text-decoration: none;
display: inline-flex;
align-items: center;
gap: 8px;
transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Animations */
.arrow { transition: transform 0.3s ease; }
.shop-button:hover, .shop-now-btn:hover { transform: translateY(-4px); }
.shop-button:hover .arrow, .shop-now-btn:hover .arrow { transform: translateX(6px); }
.shop-now-btn:hover { background-color: #333; }

/* Responsive Adjustments */
@media (max-width: 990px) {
.top-bar { padding: 10px 30px; }
.main-title { font-size: 48px; }
.banner-text-area { padding: 5% 8%; }
}
@media (max-width: 768px) {
.header-tagline { display: none; }
.top-bar { padding: 10px 20px; }
.logo-text { font-size: 18px; }
.shop-button { font-size: 14px; padding: 10px 18px; }
.banner-text-area { padding: 8% 5%; }
.banner-content { align-items: center; text-align: center; }
.main-title { font-size: 42px; }
}
{% endstylesheet %}

