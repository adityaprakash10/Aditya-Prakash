{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar"
    },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Top Button Link" },
    {
      "type": "header",
      "content": "Main Content"
    },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_button_text", "label": "Main Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_button_url", "label": "Main Button Link" },
    {
      "type": "header",
      "content": "Footer"
    },
    { "type": "text", "id": "footer_note", "label": "Footer Note", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [{ "name": "Banner Section" }]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  width: 100%;
  height: 95vh; /* Adjust height to match the reference image proportions */
  min-height: 750px;
  max-height: 1100px;
  overflow: hidden;
  background: #fff;
  font-family: 'Inter', sans-serif;
  color: #000;
}

/* Background SVG */
.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Position all child elements absolutely relative to the section */
.logo-text,
.header-tagline,
.shop-button,
.banner-content,
.footer-note {
  position: absolute;
  z-index: 2;
}

/* Top Elements */
.logo-text {
  top: 40px;
  left: 60px;
  border: 2px solid #000;
  padding: 10px 18px;
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0.1em;
  background-color: #fff;
}

.header-tagline {
  top: 55px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  letter-spacing: 0.04em;
  white-space: nowrap;
}

.shop-button {
  top: 40px;
  right: 60px;
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 32px;
  border: 2px solid #000;
  text-decoration: none;
  font-size: 16px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease;
  white-space: nowrap;
}

/* Main Content (Centered) */
.banner-content {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 620px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 25px; /* Spacing between title, description, and button */
}

.main-title {
  font-weight: 700;
  font-size: 96px;
  line-height: 1;
  border: 3px solid #000;
  padding: 15px 30px;
  margin: 0;
  background-color: #fff;
}

.description {
  font-size: 18px;
  line-height: 1.6;
  max-width: 500px;
  border: 2px solid #000;
  padding: 20px;
  margin: 0;
  background-color: #fff;
}

.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 16px 40px;
  border: 2px solid #000;
  font-weight: 700;
  font-size: 16px;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Button Animations */
.arrow {
  transition: transform 0.3s ease;
}
.shop-button:hover,
.shop-now-btn:hover {
  transform: translateY(-4px);
}
.shop-button:hover .arrow,
.shop-now-btn:hover .arrow {
  transform: translateX(6px);
}
.shop-now-btn:hover {
  background-color: #333;
}


/* Footer Note */
.footer-note {
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  font-weight: 600;
  color: #900;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  white-space: nowrap;
}

/* Responsive Adjustments */
@media (max-width: 1200px) {
  .main-title { font-size: 72px; }
  .description { max-width: 450px; }
}

@media (max-width: 990px) {
  .logo-text { left: 30px; top: 20px; }
  .shop-button { right: 30px; top: 20px; }
  .header-tagline { top: 32px; }
  .main-title { font-size: 60px; }
  .description { font-size: 16px; }
  .footer-note { bottom: 20px; }
}

@media (max-width: 768px) {
  .banner-section { min-height: 600px; height: 80vh; }
  .header-tagline { display: none; }
  .logo-text { left: 15px; top: 15px; font-size: 18px; padding: 6px 12px; }
  .shop-button { right: 15px; top: 15px; font-size: 14px; padding: 10px 18px; }
  .main-title { font-size: 42px; }
  .description { max-width: 90%; padding: 15px; }
}
{% endstylesheet %}

