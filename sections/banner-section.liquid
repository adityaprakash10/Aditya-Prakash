{% stylesheet %}
.banner-section-container {
  display: flex;
  flex-direction: column;
  height: 95vh;
  min-height: 800px;
  font-family: 'Inter', sans-serif;
  color: #000;
  background-color: #fff;
}

/* Top Bar Styling  */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  width: 100%;
  padding: 8px 20px; 
  flex-shrink: 0;
  background-color: #F8F8F8;
  border-bottom: 1px solid #EAEAEA;
  z-index: 20;
}

.logo-text {
  font-family: 'Josefin Sans', sans-serif;
  font-size: 23px;          
  font-weight: 700;
  letter-spacing: 0.05em;   
  text-transform: uppercase;
  color: #000;
}


.header-tagline {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  line-height: 13.42px;
  letter-spacing: 0px;
  white-space: nowrap;
}

.shop-button {
  position: relative;
  overflow: hidden;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  line-height: 20.48px;
  letter-spacing: 0px;
  text-transform: uppercase;
  background-color: #FFE500; 
  color: #000;               
  padding: 8px 28px;
  
  display: inline-flex;
  align-items: center;
  gap: 6px;
  text-decoration: none;
  transition: color 0.3s ease;
  z-index: 1; 
}

/* Black slider overlay */
.shop-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 0;
  background-color: #000;
  transition: width 0.4s ease;
  z-index: -1; 
}

/* Hover effect */
.shop-button:hover::before {
  width: 100%;
}

/* Change text + arrow color on hover */
.shop-button:hover {
  color: #fff;
}

.shop-button .arrow {
  transition: transform 0.3s ease, color 0.3s ease;
}

.shop-button:hover .arrow {
  color: #fff;
  
}


/* Main Area Styling */
.banner-main {
  position: relative;
  width: 100%;
  flex-grow: 1;
  overflow: hidden;
}

.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Main Content */
.banner-content {
  position: absolute;
  z-index: 2;
  top: 70%;
  left: 5%;
  transform: translateY(-50%);
  width: 90%;
  max-width: 550px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
  gap: 25px;
}

.main-title {
  font-family: 'Jost', sans-serif;
  font-weight: 500; 
  font-style: normal;
  font-size: 70px;
  line-height: 100%;
  letter-spacing: 0px;
  margin: 0;
  white-space: nowrap;
}

.description {
  font-family: 'Jost', sans-serif;
  font-weight: 400; 
  font-style: normal;
  font-size: 20px;
  line-height: 140%;
  letter-spacing: 0px;
  margin: 0;
  max-width: 500px;
}

.shop-now-btn {
  position: relative;
  overflow: hidden;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  line-height: 20.48px;
  letter-spacing: 0px;
  text-transform: uppercase;
  background-color: #000;
  color: #fff;
  padding: 16px 45px;
  
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  gap: 13px;
  text-decoration: none;
  transition: color 0.3s ease;
  z-index: 1; 
}

/* Yellow sliding overlay  */
.shop-now-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 0;
  background-color: #FFE500;
  transition: width 0.4s ease;
  z-index: -1; 
}

/* Hover efft */
.shop-now-btn:hover::before {
  width: 100%;
}

/* Change text + arrow color when hovered */
.shop-now-btn:hover {
  color: #000;
}

.shop-now-btn .arrow {
  transition: transform 0.3s ease, color 0.3s ease;
}

.shop-now-btn:hover .arrow {
  color: #000;
  
}

/* Bottom Bar */
.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #F8F8F8; 
  border-top: 1px solid #EAEAEA;
  padding: 4px 12px;
  text-align: center;
  z-index: 3;
}

.bottom-bar p {
  font-family: 'Jost', sans-serif; 
  font-weight: 400; 
  font-style: normal; 
  font-size: 16px; 
  line-height: 13.42px; 
  letter-spacing: 0px; 
  color: #000;
  margin: 0;
  font-weight: 400;
}


{% endstylesheet %}

