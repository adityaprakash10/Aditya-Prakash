{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar"
    },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Top Button Link" },
    {
      "type": "header",
      "content": "Main Content"
    },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_button_text", "label": "Main Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_button_url", "label": "Main Button Link" },
    {
      "type": "header",
      "content": "Footer"
    },
    { "type": "text", "id": "footer_note", "label": "Footer Note", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [{ "name": "Banner Section" }]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  width: 100%;
  height: 90vh; /* Using viewport height for responsiveness */
  min-height: 700px;
  max-height: 1080px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  background: #fff;
  font-family: 'Inter', sans-serif;
  color: #000;
}

/* Background SVG */
.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Positioning Wrappers */
.banner-top-wrapper,
.banner-content,
.footer-note {
  position: relative;
  z-index: 2;
  width: 100%;
}

/* Top Elements */
.logo-text {
  position: absolute;
  top: 36px;
  left: 60px;
  border: 2px solid #000;
  padding: 8px 16px;
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0.1em;
}

.header-tagline {
  position: absolute;
  top: 48px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  letter-spacing: 0.04em;
  white-space: nowrap;
}

.shop-button {
  position: absolute;
  top: 36px;
  right: 60px;
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 32px;
  border: 2px solid #000;
  border-radius: 0;
  text-decoration: none;
  font-size: 16px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease, background-color 0.3s ease;
  white-space: nowrap;
}

/* Main Content (Centered) */
.banner-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 600px;
}

.main-title {
  font-weight: 700;
  font-size: 96px;
  line-height: 1.1;
  margin: 0 0 24px;
}

.description {
  font-size: 18px;
  line-height: 1.6;
  color: #000;
  max-width: 480px;
  margin: 0 auto 36px;
}

/* SHOP NOW Button */
.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 16px 40px;
  font-weight: 700;
  font-size: 16px;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Button Animations */
.shop-button .arrow,
.shop-now-btn .arrow {
  transition: transform 0.3s ease;
}

.shop-button:hover,
.shop-now-btn:hover {
  transform: translateY(-4px);
}

.shop-button:hover .arrow,
.shop-now-btn:hover .arrow {
  transform: translateX(6px);
}

/* Footer Note */
.footer-note {
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  font-weight: 500;
  color: #c00;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  white-space: nowrap;
}

/* Responsive Adjustments */
@media (max-width: 1200px) {
  .main-title {
    font-size: 72px;
  }
}

@media (max-width: 990px) {
  .logo-text, .shop-button {
    left: 30px;
    top: 20px;
  }
  .shop-button {
    right: 30px;
    left: auto;
  }
  .header-tagline {
    top: 32px;
  }
  .main-title {
    font-size: 60px;
  }
  .description {
    font-size: 16px;
  }
  .footer-note {
    bottom: 20px;
  }
}

@media (max-width: 768px) {
  .banner-section {
    min-height: 600px;
    height: 80vh;
  }
  .header-tagline {
    display: none; /* Hide tagline on smaller screens to avoid overlap */
  }
  .logo-text, .shop-button {
    padding: 6px 12px;
    font-size: 14px;
    top: 15px;
  }
  .logo-text { left: 15px; }
  .shop-button { right: 15px; padding: 10px 20px; }
  .main-title { font-size: 42px; }
  .description { max-width: 90%; }
}
{% endstylesheet %}

