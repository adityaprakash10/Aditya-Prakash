{% comment %}
üéÅ Banner Section
Displays a hero-style banner with a background SVG, title, tagline, and button.
{% endcomment %}

<section class="banner-section">
  <!-- Background Illustration -->
  <div class="banner-bg">
    <img src="{{ 'Frame.svg' | asset_url }}" alt="Background frame" />
  </div>

  <!-- Top Bar -->
  <div class="banner-top">
    <div class="logo-text">{{ section.settings.logo_text }}</div>
    <div class="header-tagline">{{ section.settings.header_tagline }}</div>
    <a href="{{ section.settings.button_url }}" class="shop-button" role="button">
      {{ section.settings.button_text }}
      <span class="arrow">‚Üí</span>
    </a>
  </div>

  <!-- Main Content -->
  <div class="banner-content">
    <h1 class="main-title">{{ section.settings.main_title }}</h1>
    <p class="description">{{ section.settings.description }}</p>
    <a href="{{ section.settings.button_url }}" class="shop-now-btn">SHOP NOW ‚Üí</a>
  </div>

  <!-- Footer Note -->
  <div class="footer-note">SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</div>
</section>

{% schema %}
{
  "name": "Banner Section",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Button Link", "default": "/collections/all" }
  ],
  "presets": [
    { "name": "Banner Section" }
  ]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  padding: 0;
  text-align: center;
  font-family: 'Inter', sans-serif;
  overflow: hidden;
  background: #fff;
}

/* Background Image */
.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
  opacity: 1; /* Full opacity for dark black look */
}

.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0) invert(0); /* Ensures SVG appears fully black */
}

/* Top Navigation Bar */
.banner-top {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40px 60px;
  text-align: center;
}

.logo-text {
  font-weight: 700;
  font-size: 28px;
  letter-spacing: 0.12em;
  color: #000;
}

.header-tagline {
  font-weight: 400;
  font-size: 18px;
  letter-spacing: 0.05em;
  color: #000;
}

.shop-button {
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 36px;
  font-size: 16px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  gap: 6px;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
}

.shop-button:hover {
  background-color: #f0d600;
  transform: translateY(-2px);
}

.shop-button .arrow {
  transition: transform 0.3s ease;
}
.shop-button:hover .arrow {
  transform: translateX(6px);
}

/* Centered Main Content */
.banner-content {
  position: relative;
  z-index: 2;
  max-width: 700px;
  margin: 120px auto 100px;
  color: #000;
  text-align: center;
}

.main-title {
  font-weight: 700;
  font-size: 72px;
  margin-bottom: 24px;
}

.description {
  font-size: 18px;
  color: #333;
  margin-bottom: 40px;
  line-height: 1.6;
}

.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 14px 36px;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.shop-now-btn:hover {
  background-color: #333;
}

/* Footer */
.footer-note {
  font-size: 12px;
  color: #990000;
  font-weight: 500;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  padding-bottom: 40px;
}

/* Responsive */
@media (max-width: 768px) {
  .banner-top {
    flex-direction: column;
    gap: 10px;
    padding: 20px;
  }
  .main-title {
    font-size: 42px;
  }
  .description {
    font-size: 16px;
  }
  .shop-now-btn {
    font-size: 14px;
  }
}
{% endstylesheet %}
