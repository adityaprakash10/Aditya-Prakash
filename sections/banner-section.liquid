{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar"
    },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Top Button Link" },
    {
      "type": "header",
      "content": "Main Content"
    },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_button_text", "label": "Main Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_button_url", "label": "Main Button Link" }
  ],
  "presets": [{ "name": "Banner Section" }]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  width: 100%;
  height: 90vh;
  min-height: 700px;
  max-height: 1080px;
  overflow: hidden;
  background: #fff;
  font-family: 'Inter', sans-serif;
  color: #000;
}

/* Background SVG */
.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Position all text and button elements absolutely */
.logo-text,
.header-tagline,
.shop-button,
.banner-content {
  position: absolute;
  z-index: 2;
}

/* Top Elements */
.logo-text {
  top: 40px;
  left: 60px;
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0.1em;
}

.header-tagline {
  top: 50px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  letter-spacing: 0.04em;
  white-space: nowrap;
}

.shop-button {
  top: 40px;
  right: 60px;
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 32px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 16px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease;
  white-space: nowrap;
}

/* Main Content (Left-Aligned) */
.banner-content {
  top: 65%; /* Position vertically towards the bottom */
  left: 10%; /* Indent from the left */
  transform: translateY(-50%);
  width: 90%;
  max-width: 550px;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* Align all items to the left */
  text-align: left;
  gap: 25px;
}

.main-title {
  font-weight: 700;
  font-size: 96px;
  line-height: 1;
  margin: 0;
}

.description {
  font-size: 18px;
  line-height: 1.6;
  max-width: 500px;
  margin: 0;
}

.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 16px 40px;
  border-radius: 4px;
  font-weight: 700;
  font-size: 16px;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Button Animations */
.arrow {
  transition: transform 0.3s ease;
}
.shop-button:hover,
.shop-now-btn:hover {
  transform: translateY(-4px);
}
.shop-button:hover .arrow,
.shop-now-btn:hover .arrow {
  transform: translateX(6px);
}
.shop-now-btn:hover {
  background-color: #333;
}

/* Responsive Adjustments */
@media (max-width: 1200px) {
  .banner-content { left: 8%; }
  .main-title { font-size: 72px; }
  .description { max-width: 450px; }
}

@media (max-width: 990px) {
  .logo-text { left: 30px; top: 30px; }
  .shop-button { right: 30px; top: 30px; }
  .header-tagline { top: 40px; }
  .banner-content { left: 6%; top: 60%; }
  .main-title { font-size: 60px; }
  .description { font-size: 16px; }
}

@media (max-width: 768px) {
  .header-tagline { display: none; }
  .logo-text { left: 20px; top: 20px; font-size: 18px; }
  .shop-button { right: 20px; top: 20px; font-size: 14px; padding: 10px 18px; }
  .banner-content {
    left: 0;
    right: 0;
    margin: 0 auto; /* Center the content block */
    align-items: center; /* Center text inside the block */
    text-align: center;
    top: 55%;
  }
  .main-title { font-size: 48px; }
  .description { max-width: 90%; }
}
{% endstylesheet %}

