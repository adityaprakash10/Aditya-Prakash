{% comment %}
🎁 Pixel-Perfect Banner Section
Built to match the target reference exactly. 
All text areas (red boxes) are editable in the theme customizer.
No jQuery used — fully vanilla JS compatible.
{% endcomment %}

<section class="banner-section">
  <!-- Background Frame -->
  <div class="banner-bg">
    <img src="{{ 'Frame.svg' | asset_url }}" alt="Frame Background" />
  </div>

  <!-- Top Bar -->
  <div class="banner-top">
    <div class="logo-text">{{ section.settings.logo_text }}</div>
    <div class="header-tagline">{{ section.settings.header_tagline }}</div>
    <a href="{{ section.settings.button_url }}" class="shop-button" role="button">
      {{ section.settings.button_text }}
      <span class="arrow">→</span>
    </a>
  </div>

  <!-- Main Center Content -->
  <div class="banner-content">
    <h1 class="main-title">{{ section.settings.main_title }}</h1>
    <p class="description">{{ section.settings.description }}</p>
    <a href="{{ section.settings.button_url }}" class="shop-now-btn" role="button">
      SHOP NOW <span class="arrow">→</span>
    </a>
  </div>

  <!-- Footer Note -->
  <div class="footer-note">{{ section.settings.footer_note }}</div>
</section>

{% schema %}
{
  "name": "Banner Section",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Button Link", "default": "/collections/all" },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "footer_note", "label": "Footer Note", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [{ "name": "Banner Section" }]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  text-align: center;
  overflow: hidden;
  background: #fff;
  font-family: 'Inter', sans-serif;
  padding: 0;
}

/* Background SVG */
.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0) invert(0);
}

/* Top Navigation Bar */
.banner-top {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36px 60px;
}
.logo-text {
  font-size: 26px;
  font-weight: 700;
  letter-spacing: 0.12em;
  color: #000;
}
.header-tagline {
  font-size: 16px;
  color: #000;
  letter-spacing: 0.04em;
}
.shop-button {
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 32px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 16px;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}
.shop-button:hover {
  background-color: #f0d600;
  transform: translateY(-2px);
}
.shop-button .arrow {
  transition: transform 0.3s ease;
}
.shop-button:hover .arrow {
  transform: translateX(5px);
}

/* Main Content */
.banner-content {
  position: relative;
  z-index: 2;
  max-width: 700px;
  margin: 100px auto;
  text-align: center;
  color: #000;
}
.main-title {
  font-weight: 700;
  font-size: 72px;
  margin-bottom: 24px;
}
.description {
  font-size: 18px;
  line-height: 1.6;
  color: #333;
  margin-bottom: 36px;
}

/* SHOP NOW Button */
.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 14px 40px;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}
.shop-now-btn:hover {
  background-color: #333;
  transform: translateY(-2px);
}
.shop-now-btn .arrow {
  transition: transform 0.3s ease;
}
.shop-now-btn:hover .arrow {
  transform: translateX(6px);
}

/* Footer Note */
.footer-note {
  font-size: 12px;
  font-weight: 500;
  color: #900;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  padding-bottom: 40px;
}

/* Responsive */
@media (max-width: 768px) {
  .banner-top {
    flex-direction: column;
    gap: 10px;
    padding: 20px;
  }
  .main-title {
    font-size: 42px;
  }
  .description {
    font-size: 16px;
  }
  .shop-now-btn {
    font-size: 14px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', () => {
  const shopBtn = document.querySelector('.shop-now-btn');
  const chooseBtn = document.querySelector('.shop-button');

  [shopBtn, chooseBtn].forEach(btn => {
    if (!btn) return;
    btn.addEventListener('mouseenter', () => btn.classList.add('hovering'));
    btn.addEventListener('mouseleave', () => btn.classList.remove('hovering'));
  });
});
{% endjavascript %}
