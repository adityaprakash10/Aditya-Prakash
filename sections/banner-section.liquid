<section class="banner-section-container">
  <!-- Top Bar -->
  <div class="top-bar">
    <div class="logo-text">{{ section.settings.logo_text }}</div>
    <div class="header-tagline">{{ section.settings.header_tagline }}</div>
    <a href="{{ section.settings.button_url }}" class="shop-button" role="button">
  {{ section.settings.button_text }} 
           <span class="arrow">→</span>
    </a>
  </div>

  <!-- Main Area with Background and Content -->
  <div class="banner-main">
    <div class="banner-bg">
      <img src="{{ 'Frame.svg' | asset_url }}" alt="Frame Background" />
    </div>

    <div class="banner-content">
      <h1 class="main-title">{{ section.settings.main_title }}</h1>
     <p class="description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.main_button_url }}" class="shop-now-btn" role="button">
    {{ section.settings.main_button_text }} 
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Bottom Bar -->
    <div class="bottom-bar">
      <p>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
    </div>
  </div>
</section>

