{% schema %}
{
  "name": "Banner Section",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Button Link", "default": "/collections/all" },
    { "type": "image_picker", "id": "background_svg", "label": "Background SVG", "default": "" }
  ],
  "presets": [ { "name": "Banner Section" } ]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  position: relative;
  padding: 120px 40px 80px;
  text-align: center;
  font-family: 'Inter', sans-serif;
  overflow: hidden;
  background: #fff;
}

.banner-section .banner-bg {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%; z-index: 0;
  pointer-events: none;
  opacity: 0.15;
}

.banner-section .banner-bg img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

.banner-section .logo-text {
  position: absolute;
  left: 40px;
  top: 40px;
  font-weight: 600;
  font-size: 32px;
  letter-spacing: 0.12em;
  z-index: 3;
  color: black;
}

.banner-section .header-tagline {
  position: absolute;
  left: 50%;
  top: 55px;
  transform: translateX(-50%);
  font-weight: 400;
  font-size: 18px;
  letter-spacing: 0.06em;
  color: black;
  z-index: 3;
}

.banner-section .shop-button {
  position: absolute;
  right: 40px;
  top: 40px;
  background-color: #ffe500;
  color: #282828;
  font-weight: 700;
  border: none;
  padding: 16px 40px;
  font-size: 18px;
  cursor: pointer;
  border-radius: 4px;
  letter-spacing: 0.04em;
  display: flex;
  align-items: center;
  gap: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
  z-index: 3;
  text-decoration: none;
}

.banner-section .shop-button:hover {
  background-color: #f0d600;
  color: #181818;
}

.banner-section .shop-button .arrow {
  font-size: 20px;
  transition: transform 0.3s ease;
}

.banner-section .shop-button:hover .arrow {
  transform: translateX(6px);
}

.banner-section .main-title {
  font-weight: 700;
  font-size: 72px;
  margin: 0 auto 30px;
  max-width: 600px;
  color: black;
  z-index: 3;
  position: relative;
}

.banner-section .description {
  max-width: 550px;
  margin: 0 auto 60px;
  font-size: 20px;
  font-weight: 400;
  line-height: 1.5;
  color: rgb(80, 80, 80);
  position: relative;
  z-index: 3;
}

.banner-section .footer-note {
  text-transform: uppercase;
  font-weight: 500;
  font-size: 12px;
  letter-spacing: 0.06em;
  color: #990000;
  position: relative;
  z-index: 3;
}

@media (max-width: 768px) {
  .banner-section {
    padding: 80px 20px 40px;
  }
  .banner-section .main-title {
    font-size: 42px;
  }
  .banner-section .description {
    font-size: 16px;
  }
  .banner-section .logo-text,
  .banner-section .header-tagline,
  .banner-section .shop-button {
    position: static;
    display: block;
    margin: 0 auto 10px;
    text-align: center;
  }
  .banner-section .shop-button {
    margin-bottom: 30px;
  }
}
{% endstylesheet %}

<div class="banner-section">
  {% if section.settings.background_svg != blank %}
  <div class="banner-bg">
    <img src="{{ section.settings.background_svg | img_url: '2048x2048' }}" alt="Banner Background"/>
  </div>
  {% endif %}
  <div class="logo-text">{{ section.settings.logo_text }}</div>
  <div class="header-tagline">{{ section.settings.header_tagline }}</div>
  <a href="{{ section.settings.button_url }}" class="shop-button" role="button" tabindex="0">
    {{ section.settings.button_text }}
    <span class="arrow">â†’</span>
  </a>
  <h1 class="main-title">{{ section.settings.main_title }}</h1>
  <p class="description">{{ section.settings.description }}</p>
  <div class="footer-note">SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</div>
</div>
