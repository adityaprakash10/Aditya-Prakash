{% stylesheet %}
.banner-container {
display: flex;
flex-direction: column;
background-color: #fff;
font-family: 'Inter', sans-serif;
color: #000;
}

/* 1. Top Bar Area */
.top-bar {
display: flex;
justify-content: space-between;
align-items: center;
width: 100%;
height: 50px; /* Slim */
padding: 6px 40px;
background-color: #F8F8F8;
border-bottom: 1px solid #EAEAEA;
position: relative;
z-index: 10;
}
.logo-text {
font-size: 20px;
font-weight: 700;
letter-spacing: 0.1em;
}
.header-tagline {
position: absolute;
left: 50%;
transform: translateX(-50%);
font-size: 15px;
white-space: nowrap;
}
.shop-button {
background-color: #ffe500;
color: #000;
font-weight: 700;
padding: 10px 24px;
border-radius: 4px;
text-decoration: none;
font-size: 15px;
display: inline-flex;
align-items: center;
gap: 8px;
transition: transform 0.3s ease;
white-space: nowrap;
}

/* 2. Image + Text Overlay */
.banner-image-area {
position: relative;
width: 100%;
height: 50vh; /* keep original */
min-height: 400px;
overflow: hidden;
}
.banner-bg-img {
width: 100%;
height: 100%;
object-fit: cover;
}
.banner-text-overlay {
position: absolute;
top: 50%;
left: 10%; /* adjust to move text into the empty space */
transform: translateY(-50%);
max-width: 500px;
display: flex;
flex-direction: column;
gap: 20px;
}
.main-title {
font-weight: 700;
font-size: 56px;
line-height: 1.1;
margin: 0;
}
.description {
font-size: 18px;
line-height: 1.6;
margin: 0;
}
.shop-now-btn {
background-color: #000;
color: #fff;
padding: 16px 40px;
border-radius: 4px;
font-weight: 700;
font-size: 16px;
text-decoration: none;
display: inline-flex;
align-items: center;
gap: 8px;
transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Hover Effects */
.arrow { transition: transform 0.3s ease; }
.shop-button:hover, .shop-now-btn:hover { transform: translateY(-4px); }
.shop-button:hover .arrow, .shop-now-btn:hover .arrow { transform: translateX(6px); }
.shop-now-btn:hover { background-color: #333; }

/* Responsive */
@media (max-width: 990px) {
.top-bar { padding: 6px 20px; height: 45px; }
.main-title { font-size: 44px; }
}
@media (max-width: 768px) {
.header-tagline { display: none; }
.top-bar { padding: 6px 15px; height: 40px; }
.logo-text { font-size: 16px; }
.shop-button { font-size: 13px; padding: 8px 16px; }
.banner-text-overlay { left: 5%; max-width: 90%; text-align: center; align-items: center; }
.main-title { font-size: 38px; }
}
{% endstylesheet %}

