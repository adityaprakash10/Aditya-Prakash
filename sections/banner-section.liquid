{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "header",
      "content": "Top Bar"
    },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "header_tagline", "label": "Header Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_url", "label": "Top Button Link" },
    {
      "type": "header",
      "content": "Main Content"
    },
    { "type": "text", "id": "main_title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_button_text", "label": "Main Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_button_url", "label": "Main Button Link" }
  ],
  "presets": [{ "name": "Banner Section" }]
}
{% endschema %}

{% stylesheet %}
.banner-section {
  display: flex;
  flex-direction: column;
  height: 100vh;
  min-height: 800px;
  background-color: #fff;
  font-family: 'Inter', sans-serif;
  color: #000;
}

/* Top Bar Styling */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative; /* Context for the absolutely positioned tagline */
  width: 100%;
  padding: 20px 60px;
  flex-shrink: 0; /* Prevents the bar from shrinking */
  background-color: #fff;
  z-index: 10;
}

.logo-text {
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0.1em;
}

.header-tagline {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  white-space: nowrap;
}

.shop-button {
  background-color: #ffe500;
  color: #000;
  font-weight: 700;
  padding: 14px 32px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 16px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease;
  white-space: nowrap;
}

/* Main Area Styling (Image and Content) */
.banner-main {
  position: relative;
  width: 100%;
  flex-grow: 1; /* Takes up the remaining vertical space */
  overflow: hidden;
}

.banner-bg {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.banner-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Main Content (Positioned over the image) */
.banner-content {
  position: absolute;
  z-index: 2;
  top: 50%; /* Position relative to the .banner-main container */
  left: 10%;
  transform: translateY(-50%);
  width: 90%;
  max-width: 550px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
  gap: 25px;
}

.main-title {
  font-weight: 700;
  font-size: 96px;
  line-height: 1;
  margin: 0;
}

.description {
  font-size: 18px;
  line-height: 1.6;
  max-width: 500px;
  margin: 0;
}

.shop-now-btn {
  background-color: #000;
  color: #fff;
  padding: 16px 40px;
  border-radius: 4px;
  font-weight: 700;
  font-size: 16px;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

/* Button Animations */
.arrow {
  transition: transform 0.3s ease;
}
.shop-button:hover,
.shop-now-btn:hover {
  transform: translateY(-4px);
}
.shop-button:hover .arrow,
.shop-now-btn:hover .arrow {
  transform: translateX(6px);
}
.shop-now-btn:hover {
  background-color: #333;
}

/* Responsive Adjustments */
@media (max-width: 990px) {
  .top-bar { padding: 20px 30px; }
  .main-title { font-size: 72px; }
  .description { font-size: 16px; }
  .banner-content { left: 8%; }
}

@media (max-width: 768px) {
  .header-tagline { display: none; }
  .top-bar { padding: 15px 20px; }
  .logo-text { font-size: 18px; }
  .shop-button { font-size: 14px; padding: 10px 18px; }
  .banner-content {
    left: 0;
    right: 0;
    margin: 0 auto;
    align-items: center;
    text-align: center;
    top: 45%;
  }
  .main-title { font-size: 48px; }
  .description { max-width: 90%; }
}
{% endstylesheet %}

