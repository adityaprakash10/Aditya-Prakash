{% schema %}
{
  "name": "Grid Section",
  "settings": [
    { "type": "product", "id": "product_1", "label": "Select Product 1" },
    { "type": "product", "id": "product_2", "label": "Select Product 2" },
    { "type": "product", "id": "product_3", "label": "Select Product 3" },
    { "type": "product", "id": "product_4", "label": "Select Product 4" },
    { "type": "product", "id": "product_5", "label": "Select Product 5" },
    { "type": "product", "id": "product_6", "label": "Select Product 6" }
  ],
  "presets": [
    {
      "name": "Grid Section"
    }
  ]
}
{% endschema %}


{% stylesheet %}
.grid-section {
  padding: 40px 20px;
  max-width: 1200px;
  margin: auto;
}
.grid-section .section-title {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 30px;
  padding-left: 10px;
  text-align: left;
}
.grid-section .product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32px;
}
.grid-section .product-item {
  position: relative;
  cursor: pointer;
  border-radius: 6px;
  box-shadow: 0 3px 16px rgba(0,0,0,0.08);
  overflow: hidden;
}
.grid-section .product-item img {
  width: 100%;
  border-radius: 6px;
  display: block;
}
.grid-section .plus-icon {
  position: absolute;
  top: 18px;
  right: 18px;
  width: 48px;
  height: 48px;
  background: #f4f4f4;
  border: 2.5px solid #232323;
  border-radius: 50%;
  font-size: 30px;
  font-weight: 700;
  color: #232323;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 4px 16px rgba(0,0,0,0.16);
  user-select: none;
  transition: background 0.18s, border-color 0.18s, color 0.18s;
  z-index: 5;
}
.grid-section .product-item:hover .plus-icon {
  background: #232323;
  color: #fff;
  border-color: #232323;
}

.modal-overlay {
  position: fixed;
  display: none;
  inset: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9999;
  align-items: center;
  justify-content: center;
}

.modal {
  background: white;
  border-radius: 8px;
  width: 100%;
  max-width: 420px;
  padding: 24px;
  position: relative;
  font-family: 'Inter', sans-serif;
}

.modal-close {
  position: absolute;
  right: 16px;
  top: 16px;
  font-size: 22px;
  font-weight: 700;
  cursor: pointer;
  background: transparent;
  border: none;
  line-height: 1;
}

.modal img {
  width: 100%;
  object-fit: cover;
  margin-bottom: 18px;
  border-radius: 6px;
  max-height: 220px;
}

.modal .product-name {
  font-weight: 700;
  font-size: 24px;
  margin-bottom: 6px;
}

.modal .product-price {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 8px;
}

.modal .product-desc {
  font-size: 16px;
  color: #282828;
  margin-bottom: 20px;
}

/* ✅ Color buttons */
.variant-options {
  display: flex;
  justify-content: stretch;
  margin-bottom: 18px;
}

.variant-button {
  flex: 1 1 0;
  padding: 14px 0;
  border: 2px solid #222;
  background-color: #fff;
  color: #222;
  font-weight: 700;
  font-size: 18px;
  text-align: center;
  cursor: pointer;
  margin-right: -2px;
  user-select: none;
  border-radius: 0;
  transition: all 0.2s;
  outline: none;
}
.variant-button:last-child {
  margin-right: 0;
}
.variant-button.active {
  background-color: #222;
  color: #fff;
  border-color: #222;
}

/* ✅ Size dropdown */
.size-select {
  width: 100%;
  padding: 14px 12px;
  font-weight: 700;
  font-size: 18px;
  border: 2px solid #222;
  background: #fff;
  color: #222;
  margin-bottom: 20px;
  border-radius: 0;
  appearance: none;
  outline: none;
}
.size-select:focus {
  border-color: #000;
}

.add-to-cart-btn {
  width: 100%;
  background-color: #000;
  color: #fff;
  padding: 14px;
  font-weight: 700;
  font-size: 18px;
  border-radius: 2px;
  border: none;
  cursor: pointer;
  transition: background-color 0.25s ease;
}
.add-to-cart-btn:hover {
  background-color: #222;
}
{% endstylesheet %}

